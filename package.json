{
  "name": "halyard",
  "workspaces": [
    "halyard-backend",
    "halyard-sockets"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.json",
    "clean": "tsc -b --clean ./tsconfig.json && rm -rf **/tsconfig.tsbuildinfo",
    "clean-all": "yarn run clean && ./bin/nuke.sh . 'node_modules'",
    "start-servers": "node halyard-backend/server.js && node halyard-sockets/server.js",
    "start-backend": "node halyard-backend/server.js",
    "start-sockets": "node halyard-sockets/server.js",
    "test": "jest --config=\"./jest.config.unit.js\"",
    "unit-tests": "jest --config=\"./jest.config.unit.js\" --maxWorkers=3 --coverage",
    "functional-tests": "NODE_ENV=test jest --config=\"./jest.config.spec.js\" --forceExit --maxWorkers=1 --detectOpenHandles",
    "integration-tests": "NODE_ENV=test jest --config=\"./jest.config.js\" --forceExit --maxWorkers=1 --detectOpenHandles"
  },
  "version": "1.0.0",
  "description": "Sample halyard project",
  "repository": "git@github.com:c6o/halyard.git",
  "author": "narayan & robb",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "del": "^6.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "javascript-obfuscator": "^1.10.2",
    "jest": "^26.0.1",
    "jest-html-reporters": "^2.0.3",
    "typescript": "^4.3.2"
  }
}
